daemon off;
# Supported log levels: debug, info, notice, warn, error, crit, alert, emerg
error_log /dev/stdout {{ var "LOG_LEVEL" | default "notice" }};
user nobody nogroup;
worker_processes {{ var "WORKER_PROCESSES" | default "1" }};
events {
    worker_connections  1024;
}

http {
  include /etc/nginx/mime.types;

  upstream app {
    server {{ var "UPSTREAM_SERVER" | default "unix:///app/tmp/puma.sock" }} fail_timeout=0;
  }

  server {
    listen 8080;
    server_name {{ var "SERVER_NAME" | default "example.com" }};
    access_log /dev/stdout;
    root /app/public;
    try_files $uri/index.html $uri @app;

    location @app {
        proxy_pass http://app;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }

    error_page 500 502 503 504 /500.html;
    client_max_body_size 4G;
    keepalive_timeout 10;
  }
}
